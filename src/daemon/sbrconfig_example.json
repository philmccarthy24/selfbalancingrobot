{
    "ahrs": {
        "fusionAlgorithm": "Madgwick",
        "sensorSampleRateHz": 20,
        "sensors": [
            "MPU6050_gyro",
            "MPU6050_accel"
        ]
    },
    "logging": {
        "level": "error",
        "pattern": "%+",
        "sinks": [
            {
                "type": "stdout_color_sink_mt"
            },
            {
                "type": "rotating_file_sink_mt",
                "maxSize": 5169950,
                "maxFiles": 3,
                "logFileRoot": "logs/rotating.txt"
            }
        ],
        "loggers": [
            {
                "name": "RootLogger",
                "level": "debug",
                "pattern": "%+"
            },
            {
                "name": "MPU6050Gyro",
                "level": "debug",
                "pattern": "%+"
            }
        ]
    }
}