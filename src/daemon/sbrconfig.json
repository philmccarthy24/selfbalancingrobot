{
    "ahrs": {
        "fusionAlgorithm": "Madgwick",
        "sensorSampleRateHz": 20,
        "sensors": [
            "MPU6050_gyro",
            "MPU6050_accel"
        ]
    },
    "logging": {
        "sinks": [
            {
                "type": "stdout_color_sink_mt",
                "level": "trace"
            },
            {
                "type": "rotating_file_sink_mt",
                "maxSize": 5169950,
                "maxFiles": 3,
                "logFileRoot": "logs/rotating.txt",
                "level": "trace",
                "pattern": "[%H:%M:%S %z] [%n] [%^---%L---%$] [thread %t] %v"
            }
        ],
        "loggers": [
            {
                "name": "MPU6050Gyro",
                "level": "trace"
            }
        ]
    }
}