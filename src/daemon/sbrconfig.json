{
    "ahrs": {
        "fusionAlgorithm": "Madgwick",
        "sensorSampleRateHz": 20,
        "sensors": [
            "FXAS2100_gyro",
            "FXOS8700_accel",
            "FXOS8700_mag"
        ]
    },
    "motorControl": {
        "coms": {
            "type": "serial",
            "serialPort": "/dev/ttyACM0",
            "baud": 115200
        },
        "motors": [
            {
                "name": "right",
                "id": 0,
                "reversed": false
            },
            {
                "name": "left",
                "id": 1,
                "reversed": true
            }
        ]
    },
    "logging": {
        "level": "info",
        "pattern": "%+",
        "sinks": [
            {
                "type": "stdout_color_sink_mt"
            }
        ],
        "loggers": [
            {
                "name": "RootLogger",
                "level": "debug",
                "pattern": "%+"
            }
        ]
    }
}